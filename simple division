int main() {
	float sayi1,sayi2;
	double sonuc ;
	
	
	printf("1. sayiyi girin:");
	scanf("%f",&sayi1);
	
	printf("2. sayiyi girin:");
	scanf("%f",&sayi2);
	
	if (sayi2 != 0){
	(sonuc= sayi1 / sayi2);
	printf("%.1f ile %.1f nin bolumu %.1f\n",sayi1,sayi2,sonuc);
	} else{ 
	printf("bu islem yapilamaz!\n");	
	}
	
	return 0;
}
